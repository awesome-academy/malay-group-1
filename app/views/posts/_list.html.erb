<% @posts.each do |post| %>
  <div class="well">
    <h1><%= post.title %></h1>
    <p>
      <h2><%= post.body %></h2>
    </p>
    <h5>
      <%= t "posts.created_at" %>
      <%= link_to post.user.name, post.user %>
      <%= time_ago_in_words post.created_at %>
      <%= t "posts.ago" %><br>
    </h5>
    <link rel="stylesheet" type="text/css" href="loading.css" media="screen"/>
      <div class="btn btn-default ld ld-heartbeat">
        <%= link_to t("read.more"), post_path(post) %>
      </div>
  </div>
<% end %>
