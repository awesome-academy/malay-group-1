<% provide :title, t(".title") %>
<h1><%= t ".heading" %></h1>
<div class="col-md-6 col-md-offset-3">
  <div class="row">
    <% @topics.each do |topic| %>
      <div class="well">
        <%= link_to posts_path(:top => topic.id) do %>
          <div class="list-group" style="max-width: 500px;">
            <%= topic.name %> (<%= topic.posts.count %>)
            <%if logged_in? && current_user.admin? %>
              <%= link_to t("delete.msg"), topic_path(topic), class: "btn btn-danger" %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
